{
  "name": "code-couplet-vscode",
  "displayName": "Code Couplet",
  "description": "Typechecker for your comments. Guarantee your comments are up to date with your code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:TODO_remove_this_*_activation",
    "onCommand:code-couplet-vscode.linkSelection"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-couplet-vscode.linkSelection",
        "title": "Code Couplet: Link Selection"
      }
    ],
    "configuration": {
      "title": "Code Couplet",
      "properties": {
        "code-couplet.showLinkingSuccessMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show success message"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "build": "node_modules/.bin/webpack",
    "watch": "node_modules/.bin/webpack --watch",
    "package": "node_modules/.bin/webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "json5": "^2.2.1"
  }
}
